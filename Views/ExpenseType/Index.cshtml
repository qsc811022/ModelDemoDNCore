@model IEnumerable<ModelDemoDNCore.Models.ExpenseType>

<div class="container" p-3>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Expense  List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ExpenseType" asp-action="Create" class="btn btn-primary"> Create new  Expense Type</a>
           
        </div>

    </div>
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense
                    </th>
                    <th>
                         change
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var ExpenseType in Model)
                {
                <tr>
                    <td width="30%">@ExpenseType.Name
                    <td width="40%">
                        <div class="col-6 text-right">
                            <a asp-controller="ExpenseType" asp-action="Update" asp-route-id="@ExpenseType.Id" class="btn btn-primary">Update</a>
                            <a asp-controller="ExpenseType" asp-action="Delete" asp-route-id="@ExpenseType.Id" class="btn btn-primary">Delete</a>
                        </div>
                    </td>
                </tr>

                }

            </tbody>
        </table>      
    }
    else
    {
        <p>No item Create yet</p>

    }
</div>